      "source": [
        "import pandas as pd\n",
        "import nltk\n",
        "from nltk.stem import WordNetLemmatizer\n",
        "from nltk.tokenize import word_tokenize\n",
        "from sklearn.feature_extraction.text import TfidfVectorizer\n",
        "from sklearn.svm import SVC\n",
        "from sklearn.pipeline import Pipeline\n",
        "\n",
        "# Create the training dataset (updated with more diverse examples)\n",
        "data = {\n",
        "    'query': [\n",
        "        \"I have a problem with my order\",\n",
        "        \"Where is my package?\",\n",
        "        \"How to return an item?\",\n",
        "        \"I want to cancel my subscription\",\n",
        "        \"How do I reset my password?\",\n",
        "        \"What is your refund policy?\",\n",
        "        \"I need technical support\",\n",
        "        \"How can I contact customer service?\",\n",
        "        \"My product is damaged\",\n",
        "        \"I have a billing question\",\n",
        "        \"Update my shipping address\",\n",
        "        \"How to change my payment method?\",\n",
        "        \"I want to leave feedback\",\n",
        "        \"Report a bug on the website\",\n",
        "        \"What are your operating hours?\",\n",
        "        \"Apply a discount code\",\n",
        "        \"Troubleshoot login issues\",\n",
        "        \"I received the wrong item\",\n",
        "        \"How to use a gift card?\",\n",
        "        \"Request a demo\",\n",
        "        \"hello\",\n",
        "        \"hi\",\n",
        "        \"hey there\",\n",
        "        \"good morning\",\n",
        "        \"my order is missing\", # Added more order_problem examples\n",
        "        \"I didn't receive my order\",\n",
        "        \"There's an issue with my delivery\",\n",
        "        \"My order hasn't arrived\",\n",
        "        \"The wrong item was sent\", # Added more wrong_item examples\n",
        "        \"I got the incorrect product\",\n",
        "        \"The item is not what I ordered\",\n",
        "        \"How do I check my order status?\", # Added more track_order examples\n",
        "        \"Track my shipment\",\n",
        "        \"Where is my delivery?\",\n",
        "        \"I want to send something back\", # Added more return_item examples\n",
        "        \"How do I make a return?\",\n",
        "        \"Can I send this item back?\"\n",
        "    ],\n",
        "    'intent': [\n",
        "        \"order_problem\",\n",
        "        \"track_order\",\n",
        "        \"return_item\",\n",
        "        \"cancel_subscription\",\n",
        "        \"password_reset\",\n",
        "        \"refund_policy\",\n",
        "        \"technical_support\",\n",
        "        \"contact_support\",\n",
        "        \"product_damage\",\n",
        "        \"billing_question\",\n",
        "        \"update_shipping\",\n",
        "        \"change_payment\",\n",
        "        \"leave_feedback\",\n",
        "        \"report_bug\",\n",
        "        \"operating_hours\",\n",
        "        \"apply_discount\",\n",
        "        \"login_troubleshoot\",\n",
        "        \"wrong_item\",\n",
        "        \"use_giftcard\",\n",
        "        \"request_demo\",\n",
        "        \"greeting\",\n",
        "        \"greeting\",\n",
        "        \"greeting\",\n",
        "        \"greeting\",\n",
        "        \"order_problem\", # Intents for new examples\n",
        "        \"order_problem\",\n",
        "        \"order_problem\",\n",
        "        \"order_problem\",\n",
        "        \"wrong_item\",\n",
        "        \"wrong_item\",\n",
        "        \"wrong_item\",\n",
        "        \"track_order\",\n",
        "        \"track_order\",\n",
        "        \"track_order\",\n",
        "        \"return_item\",\n",
        "        \"return_item\",\n",
        "        \"return_item\"\n",
        "    ]\n",
        "}\n",
        "\n",
        "df = pd.DataFrame(data)\n",
        "\n",
        "# Ensure necessary NLTK data is downloaded\n",
        "nltk.download('punkt')\n",
        "nltk.download('wordnet')\n",
        "try:\n",
        "    nltk.data.find('tokenizers/punkt_tab')\n",
        "except LookupError:\n",
        "    nltk.download('punkt_tab')\n",
        "\n",
        "\n",
        "lemmatizer = WordNetLemmatizer()\n",
        "\n",
        "def preprocess_text(text):\n",
        "    tokens = word_tokenize(text.lower())\n",
        "    lemmatized_tokens = [lemmatizer.lemmatize(token) for token in tokens]\n",
        "    return ' '.join(lemmatized_tokens)\n",
        "\n",
        "# Preprocess the queries\n",
        "df['preprocessed_query'] = df['query'].apply(preprocess_text)\n",
        "\n",
        "\n",
        "# Define and train the model pipeline\n",
        "vectorizer = TfidfVectorizer()\n",
        "classifier = SVC(kernel='linear', probability=True)\n",
        "model_pipeline = Pipeline([('vectorizer', vectorizer), ('classifier', classifier)])\n",
        "\n",
        "# Train the model\n",
        "model_pipeline.fit(df['preprocessed_query'], df['intent'])\n",
        "\n",
        "\n",
        "# Define predefined responses for each intent (updated to include greeting)\n",
        "responses = {\n",
        "    \"order_problem\": \"I'm sorry to hear about the problem with your order. Can you please provide your order number so I can assist you?\",\n",
        "    \"track_order\": \"To track your order, please provide your order number. You can usually find this in your confirmation email.\",\n",
        "    \"return_item\": \"To initiate a return, please visit our returns page on the website and follow the instructions.\",\n",
        "    \"cancel_subscription\": \"You can cancel your subscription by logging into your account settings on our website.\",\n",
        "    \"password_reset\": \"To reset your password, please go to the login page and click on 'Forgot Password'.\",\n",
        "    \"refund_policy\": \"Our refund policy can be found on our website under the 'Support' or 'FAQ' section.\",\n",
        "    \"technical_support\": \"For technical support, please describe the issue you are experiencing in detail.\",\n",
        "    \"contact_support\": \"You can contact customer service by calling us at [phone number] or by filling out the contact form on our website.\",\n",
        "    \"product_damage\": \"I'm sorry to hear your product was damaged. Please provide photos of the damage and your order number.\",\n",
        "    \"billing_question\": \"For billing questions, please provide your account details or order number.\",\n",
        "    \"update_shipping\": \"To update your shipping address, please log in to your account and go to your profile settings.\",\n",
        "    \"change_payment\": \"You can change your payment method in your account settings.\",\n",
        "    \"leave_feedback\": \"Thank you for your feedback! You can leave your comments in the feedback section on our website.\",\n",
        "    \"report_bug\": \"Please provide a detailed description of the bug you encountered, including steps to reproduce it.\",\n",
        "    \"operating_hours\": \"Our operating hours are [operating hours].\",\n",
        "    \"apply_discount\": \"To apply a discount code, enter the code during checkout.\",\n",
        "    \"login_troubleshoot\": \"If you are having trouble logging in, please try resetting your password or clearing your browser cache.\",\n",
        "    \"wrong_item\": \"I apologize that you received the wrong item. Please provide your order number and a description of the item you received.\",\n",
        "    \"use_giftcard\": \"To use a gift card, enter the gift card code during checkout.\",\n",
        "    \"request_demo\": \"To request a demo, please fill out the demo request form on our website.\",\n",
        "    \"greeting\": \"Hello! How can I help you today?\"\n",
        "}\n",
        "\n",
        "def chatbot_response(query):\n",
        "    preprocessed_query = preprocess_text(query)\n",
        "    predicted_intent = model_pipeline.predict([preprocessed_query])[0]\n",
        "    return responses.get(predicted_intent, \"I'm sorry, I didn't understand that. Can you please rephrase your question?\")\n",
        "\n",
        "# Example usage (optional, for testing)\n",
        "# print(chatbot_response(\"How do I return something I bought?\"))\n",
        "# print(chatbot_response(\"My package hasn't arrived yet\"))\n",
        "# print(chatbot_response(\"Tell me about your hours\"))"
      ],
      "execution_count": 7,
      "outputs": [
        {
          "output_type": "stream",
          "name": "stderr",
          "text": [
